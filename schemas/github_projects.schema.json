{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "GitHub Projects",
  "type": "object",
  "properties": {
    "categories": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "category": { "type": "string" },
          "projects": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "name": { "type": "string", "minLength": 1 },
                "url": { "type": "string", "format": "uri" },
                "description": { "type": "string", "minLength": 1 },
                "stars": { "type": ["integer", "null"], "minimum": 0 },
                "last_updated": { "type": "string", "pattern": "^\\d{4}-\\d{2}-\\d{2}$" },
                "tech_stack": { "type": "array", "items": { "type": "string" } },
                "license": { "type": ["string", "null"] },
                "maturity": { "type": ["string", "null"], "enum": ["research", "prod", null] },
                "modality": { "type": ["string", "null"] },
                "domain": { "type": ["string", "null"] },
                "spatial_scale": { "type": ["string", "null"] },
                "temporal_scale": { "type": ["string", "null"] },
                "key_methods": { "type": ["array", "null"], "items": { "type": "string" } },
                "datasets_used": { "type": ["array", "null"], "items": { "type": "string" } },
                "benchmarks": { "type": ["array", "null"], "items": { "type": "string" } },
                "limitations": { "type": ["string", "null"] },
                "reproducibility": { "type": ["string", "null"] }
              },
              "required": ["name", "url", "description"],
              "additionalProperties": true
            }
          }
        },
        "required": ["category", "projects"],
        "additionalProperties": false
      }
    }
  },
  "required": ["categories"],
  "additionalProperties": false
}
